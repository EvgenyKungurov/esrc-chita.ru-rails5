<% provide(:title, 'Ответ на вопрос') %>
<div class="center hero-unit">
<%= form_for :answerpost, url: answerpost_path(@answerpost), method: :patch do |f| %>
  <% if @answerpost.errors.any? %>
  <div id="error_explanation">
    <h2> Сохранить не возможно из-за следующих <%= pluralize(@answerpost.errors.count, "ошибок")%>: </h2>
    <ul>
    <% @answerpost.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
   <%= f.label :"Текст" %>
   <%= f.text_field :text, :size => "30x10" %><br>
   <%= f.label :"Текст ответа" %>
   <%= f.cktext_area :answer %>
   <%= f.submit :"Сохранить"%>
<% end %>
<%= link_to 'Назад', index_admin_answerposts_path %>
</div>
  <% if current_user && sign_in_admin? %>
<%= link_to 'Редактировать', edit_answerpost_path(@answerpost) %>
<% end %>
</div>