<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="description" content= "<%= yield :description %>" >
    <meta name="keywords" content="ЕСРЦ,есрц,соцзащита,социальная,защита,населения,население">
    <meta name='wmail-verification' content='e43236287ebbad71' />
    <meta name="yandex-verification" content="a05a5092c2d9126f" />
  </head>

  <body>
    <%= render 'layouts/header' %>
      <div class="container">
        <div class="hero-unit center">
          <% flash.each do |key, value| %>
            <div class="alert alert-key"><%= value %></div>
          <% end %>
          <%= yield %>
        </div>
      </div>
    
    <center><%= render 'layouts/footer' %></center>
  </body>
</html>
