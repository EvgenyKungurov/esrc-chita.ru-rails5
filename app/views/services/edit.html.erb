<% provide(:title, 'Редактирование статьи') %>
<div class="center hero-unit">
<%= form_for :service, url: service_path(@service), method: :patch do |f| %>
  <% if @service.errors.any? %>
  <div id="error_explanation">
    <h2> Статя не может быть сохранена из-за следующих <%= pluralize(@service.errors.count, "ошибок")%>: </h2>
    <ul>
    <% @service.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
      <%= f.label :"Заголовок" %>
      <%= f.cktext_area :title %>
      <%= f.label :"Позиция заголовка в перечне услуг" %>
      <%= f.text_field  :position %>
      <%= f.label :"Тип оказываемой услуги(МСП, ДСВ и другие)" %>
      <%= f.text_field  :type_service %>
      <%= f.submit :"Сохранить" %>
<% end %>
<%= link_to 'Назад', services_path %>
</div>
